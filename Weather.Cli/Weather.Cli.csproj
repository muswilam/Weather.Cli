<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<PackAsTool>true</PackAsTool>
		<ToolCommandName>weather</ToolCommandName>
		<PackageOutputPath>./nupkg</PackageOutputPath>
		<PackageId>Bila.Q.Weather.Cli</PackageId>
		<Description>Cli tool to get the weather information for a chosen city.</Description>
		<Version>1.0.1</Version>
		<Authors>Sully</Authors>
		<Company>Bila.Q</Company>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/muswilam/Weather.Cli</RepositoryUrl>
		<PackageTags>Cli, Weather, .NET</PackageTags>
		<PackageIcon>rain.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
	  <None Update="rain.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>
